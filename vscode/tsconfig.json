{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": false, // sourcemaps come from esbuild/vite
    "rootDir": ".",
    "outDir": "dist/tsc",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
  },
  "include": [
    "src",
    "src/commands/prompt/cody.json",
    "test/fixtures",
    "playwright.config.ts",
    "test/e2e",
    "webviews",
    "package.json",
    ".storybook/*.ts",
    "../lib/shared/src/telemetry/EventLogger.ts",
  ],
  "exclude": ["scripts", "dist", "test/integration", "**/test-data", "vite.config.ts", "webviews/vite.config.ts"],
  "references": [
    {
      "path": "../lib/shared",
    },
    {
      "path": "../lib/ui",
    },
  ],
}
